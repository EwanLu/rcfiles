# encodings
defutf8 on
defencoding utf8

# Caption
# color setting provided by NCTUCS
#caption always "%{WK}%-w%<%{=B GK}%n %t%{= KW}%+w%-09=  %Y %M/%d(%D) %{RW} %C %A"
caption always "%{WK}%-w%<%{=B GK}%n %t%{= KW}%+w%=%H%=%Y/%m/%d %c:%s"
# from Internet
#caption always "%{bw} %M/%d %D %C%A %{wb} %-w%{y}%n %t%{w}%+w%{k}"

# Hardstatus
#hardstatus alwayslastline "%{=b BW} {%l}%018=%{=B WK} %H %-028=%{YK} %Y %M/%d(%D) %{RW} %C %A"
hardstatus alwaysignore

# switching window
#bindkey \033[D prev     # for putty/pietty
#bindkey \033[C next
bindkey \033[1;5D prev  # for cygwin
bindkey \033[1;5C next

# switching encoding
bind b encoding big5 utf8
bind u encoding utf8 utf8

# default title of new window
shelltitle "-"

defencoding utf8
