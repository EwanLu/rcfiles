# encodings
defutf8 on
defencoding utf8

# Caption
backtick 0 0 0 sh -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*" | sed "s/^[0-9]*\.//g"'
caption always "%{= kw} %-w%{= mw}[%n] %t%{= kw}%+w%{= kw} %= %` %=%Y/%m/%d %c:%s"

# Hardstatus
hardstatus alwaysignore

# switching window
#bindkey \033[D prev     # for putty/pietty
#bindkey \033[C next
bindkey \033[1;5D prev  # for cygwin
bindkey \033[1;5C next

bind = resize =
bind + resize +1
bind - resize -1
bind _ resize max
bind P number -1
bind N number +1

# switching encoding
bind b encoding big5 utf8
bind u encoding utf8 utf8

# default title of new window
shelltitle "-"

defencoding utf8
