#compdef up

_get_parent_folders () {
    local pwd_str="$(pwd)"
    local climber="$(dirname $pwd_str)"
    local indicator="../"
    while [ "$climber" != "/" ]; do
        echo "${indicator}:\"${climber}\" "
        climber="$(dirname $climber)"
        indicator="${indicator}../"
    done
    echo "${indicator}:\"${climber}\""
}

_arguments "1:Parent directories:(($(_get_parent_folders)))"

